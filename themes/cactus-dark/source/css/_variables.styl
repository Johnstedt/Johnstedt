// Fonts
$font-family-body = "Menlo", "Meslo LG", monospace
$font-family-mono = "Menlo", "Meslo LG", monospace
$font-family-tt = "Inconsolata", monospace
$font-size = 14px
$line-height = 1.725

// Colors
$color-background = white//#1d1f21
$color-link = black//rgba(212, 128, 170, 1) // vimeo: :selection with alpha=1
$color-text = black //#c9cacc
$color-light = black//#cccccc
$color-lightest = black//#eeeeee
$color-accent = darkgreen//#2bbc8a
$ease-in-sine = white//cubic-bezier(0.47, 0, 0.745, 0.715)

// Logo
logo-width = 0px + hexo-config("customize.logo.width")
logo-height = 0px + hexo-config("customize.logo.height")

// Code Highlight
highlight = hexo-config("customize.highlight") || "tomorrow-night"
